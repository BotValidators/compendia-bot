// FOR DEVELOPMENT
{
  "compilerOptions": {
    "lib": ["es2018"],
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": false,
    "alwaysStrict": false,
    "resolveJsonModule": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "__tests__/__support__"]
}

